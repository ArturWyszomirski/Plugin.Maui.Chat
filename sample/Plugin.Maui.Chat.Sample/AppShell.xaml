<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Plugin.Maui.Chat.Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Plugin.Maui.Chat.Sample.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Plugin.Maui.Chat.Sample">
    <TabBar>
        
        <ShellContent Title="Simple"
                      ContentTemplate="{DataTemplate pages:SimpleChatPage}"
                      Route="SimpleChat" />

        <ShellContent Title="Audio"
                      ContentTemplate="{DataTemplate pages:AudioChatPage}"
                      Route="AudioChat" />

        <ShellContent Title="Transcript"
                      ContentTemplate="{DataTemplate pages:TranscriptionChatPage}"
                      Route="TranscriptionChat" />

        <ShellContent Title="Hands-free"
                      ContentTemplate="{DataTemplate pages:HandsFreeChatPage}"
                      Route="HandsFreeChat" />

        <ShellContent Title="Custom"
                      ContentTemplate="{DataTemplate pages:CustomizedChatPage}"
                      Route="CustomizedChat" />
        
    </TabBar>
</Shell>
