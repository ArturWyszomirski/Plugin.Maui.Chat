<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Plugin.Maui.Chat.Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Plugin.Maui.Chat.Sample.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Plugin.Maui.Chat.Sample">
    <TabBar>
    <ShellContent Title="Simple chat"
                  ContentTemplate="{DataTemplate pages:SimpleChatPage}"
                  Route="SimpleChat" />
    <ShellContent Title="Customized chat"
                  ContentTemplate="{DataTemplate pages:CustomizedChatPage}"
                  Route="CustomizedChat" />
    </TabBar>
</Shell>
