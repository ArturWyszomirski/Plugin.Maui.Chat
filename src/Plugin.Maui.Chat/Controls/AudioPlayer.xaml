<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Plugin.Maui.Chat.Controls.AudioPlayer"
             x:Name="player">

    <ImageButton Command="{Binding StartStopCommand, Source={x:Reference player}}"
                 Source="{Binding Icon, Source={x:Reference player}}">
        <ImageButton.Behaviors>
            <toolkit:IconTintColorBehavior TintColor="{Binding Color, Source={x:Reference player}}"/>
        </ImageButton.Behaviors>
    </ImageButton>
    
</ContentView>
