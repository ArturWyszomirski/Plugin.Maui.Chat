<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Plugin.Maui.Chat.Controls.AudioRecorder"
             x:Name="recorder">

    <ImageButton x:Name="recorderButton" 
                 Source="{Binding Icon, Source={x:Reference recorder}}">
        <ImageButton.Behaviors>
            <toolkit:IconTintColorBehavior TintColor="{Binding Color, Source={x:Reference recorder}}"/>
        </ImageButton.Behaviors>
    </ImageButton>
    
</ContentView>
